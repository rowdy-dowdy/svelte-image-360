// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// admin
model Admin {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String
  name          String
  image         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Scene {
  id                    String @id @default(uuid())
  url                   String
  name                  String
  levels                String
  faceSize              Int
  initialViewParameters String

  infoHotspots InfoHotspots[]
  linkHotspots LinkHotspots[]
}

model InfoHotspots {
  id          String  @id @default(uuid())
  yaw         Float
  pitch       Float
  rotation    Float?
  target      String?
  direction   String?
  title       String?
  description String?
  image       String?
  type        String?

  sceneId String
  scene   Scene  @relation(fields: [sceneId], references: [id])
}

model LinkHotspots {
  id        String  @id @default(uuid())
  yaw       Float
  pitch     Float
  rotation  Float?
  target    String
  direction String

  sceneId String
  scene   Scene  @relation(fields: [sceneId], references: [id])
}
